<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/adyen_blue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:rowCount="4"
            android:columnCount="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/plus4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="#EEEEEE"
                    android:onClick="AddToCart"
                    android:tag="4"
                    android:text="Four Dollar Item"
                    android:textColor="#000000"
                    android:layout_column="0"
                    android:layout_row="0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/plus5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="#EEEEEE"
                    android:text="Six Dollar Item"
                    android:textColor="#000000"
                    android:onClick="AddToCart"
                    android:layout_column="1"
                    android:layout_row="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/plus1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="#EEEEEE"
                    android:text="One Dollar Item"
                    android:textColor="#000000"
                    android:onClick="AddToCart"
                    android:layout_column="0"
                    android:layout_row="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                >
                <Button
                    android:id="@+id/plus2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="#EEEEEE"
                    android:text="Two Dollar Item"
                    android:textColor="#000000"
                    android:onClick="AddToCart"
                    android:layout_column="1"
                    android:layout_row="1"/>
            </LinearLayout>
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/totalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingEnd="0dp"
                    android:text="Total:"
                    android:textAlignment="viewEnd"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/totalField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/scanButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="scanProduct"
                    android:backgroundTint="@color/adyen_blue_alt"
                    android:layout_marginBottom="20dp"
                    android:text="Scan" />
                <Button
                    android:id="@+id/refundButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:onClick="refundGo"
                    android:backgroundTint="@color/adyen_blue_alt"
                    android:layout_marginBottom="20dp"
                    android:text="Refund" />
            </LinearLayout>

            <Button
                android:id="@+id/paymentButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="makePayment"
                android:backgroundTint="@color/adyen_green"
                android:layout_marginBottom="20dp"
                android:text="Pay" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>